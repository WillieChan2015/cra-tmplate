{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "commonjs",
    "types" : ["node"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["./app/*"],
      "app/*": ["./app/*"],
      "conf/*": ["./conf/*"]
    }
  }
}